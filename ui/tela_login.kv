#:kivy 2.0.0

<TelaLogin>:
    id: tela_login
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 40]
        spacing: 20
        Image:
            source: 'data/logo.png'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': 0.5}
            allow_stretch: True
            keep_ratio: True
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            size_hint_y: None
            height: self.minimum_height
            Label:
                text: 'Usu√°rio:'
                size_hint_y: None
                height: 30
            TextInput:
                id: username
                multiline: False
                size_hint_y: None
                size_hint_x: None
                height: 40
                width: 600
                pos_hint: {'center_x': 0.5}
                padding: [10, 10]
                background_normal: ''
                background_color: [1, 1, 1, 1]
                #border: [10, 10, 10, 10]
            Label:
                text: 'Senha:'
                size_hint_y: None
                height: 30
            TextInput:
                id: password
                password: True
                multiline: False
                size_hint_y: None
                size_hint_x: None
                height: 40
                width: 600
                pos_hint: {'center_x': 0.5}
                padding: [10, 10]
                background_normal: ''
                background_color: [1, 1, 1, 1]
                border: [20, 20, 20, 20]
            Button:
                text: 'Entrar'
                size_hint_y: None
                size_hint_y: None
                size_hint_x: None
                height: 40
                width: 600
                pos_hint: {'center_x': 0.5}
                background_color: [0.3, 0.7, 0.3, 1]
                color: [1, 1, 1, 1]
                on_press: root.login()
